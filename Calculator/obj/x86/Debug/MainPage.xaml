<Page
    x:Class="Calculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Vertical" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

            <TextBlock Margin="0,25,0,0" TextAlignment="Center">Введите число:</TextBlock>
            <TextBox x:ConnectionId='2' AutomationProperties.Name="txtNumber" x:Name="txtNumber" 
     Margin="0,5,0,0" FontSize="18" Width="380"></TextBox>

            <TextBlock Margin="0,25,0,0" TextAlignment="Center">Результат:</TextBlock>
            <TextBox x:ConnectionId='3' AutomationProperties.Name="txtResult" x:Name="txtResult" 
     TextAlignment="Center" FontSize="18" Width="380" IsEnabled="False" RequestedTheme="Default"></TextBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <Button x:ConnectionId='4' AutomationProperties.Name="btnAC" x:Name="btnAC" Margin="20,20,20,0" HorizontalAlignment="Center"
                         Height="50" Width="50" Content="AC"/>
                <Button x:ConnectionId='5' AutomationProperties.Name="btnPlus" x:Name="btnPlus" Margin="0,20,20,0" HorizontalAlignment="Center"
                           Height="50" Width="50" Content="+"/>
                <Button x:ConnectionId='6' AutomationProperties.Name="btnMinus" x:Name="btnMinus" Margin="0,20,20,0" HorizontalAlignment="Center"
                            Height="50" Width="50" Content="-"/>
                <Button x:ConnectionId='7' AutomationProperties.Name="btnMultiple" x:Name="btnMulpiple" Margin="0,20,20,0" HorizontalAlignment="Center"
                               Height="50" Width="50" Content="*"/>
                <Button x:ConnectionId='8' AutomationProperties.Name="btnDiv" x:Name="btnDiv" Margin="0,20,20,0" HorizontalAlignment="Center"
                          Height="50" Width="50" Content="/"/>
                <Button x:ConnectionId='9' AutomationProperties.Name="btnGetSquare" x:Name="btnGetSquare" Height="50" Width="50" 
     Margin="0,20,20,0" HorizontalAlignment="Center"                            Content="x^2"/>
                <Button x:ConnectionId='10' AutomationProperties.Name="btnEq" x:Name="btnEq" Margin="0,20,20,0" HorizontalAlignment="Center"
                         Height="50" Width="50" Content="="/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

